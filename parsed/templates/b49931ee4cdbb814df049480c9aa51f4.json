{"components/products/ratings":"<span role=\"img\" class=\"d-inline-block v-a-middle f-size-tiny rating-filter\"\n    {{#if rating_target}}\n      aria-label=\"{{lang 'products.reviews.rating_aria_label' rating_target=rating_target current_rating=rating max_rating=5}}\"\n    {{else}}\n      aria-label=\"{{lang 'products.reviews.rating_aria_label' rating_target='Product' current_rating=rating max_rating=5}}\"\n    {{/if}}\n>\n    {{#for 1 5}}\n        {{#if ../this.rating '>=' $index}}\n            <span class=\"icon icon--ratingFull\">\n                <svg>\n                    <use href=\"#icon-star\" />\n                </svg>\n            </span>\n        {{else}}\n            <span class=\"icon icon--ratingEmpty\">\n                <svg>\n                    <use href=\"#icon-star\" />\n                </svg>\n            </span>\n        {{/if}}\n    {{/for}}\n</span>\n","components/products/reviews":"{{#if reviews.total}}\n    <div class=\"halo-block arrow-custom-right-top reviewBlock productReviews c-b\" data-halo-load=\"animation\">\n        <div class=\"container container-1600\">\n            <div class=\"halo-block-header o-h\">\n                <h2 class=\"title d-inline-block halo-fadeInUp m-0\">\n                    <span class=\"text\">{{lang 'products.reviews.heading'}} ({{reviews.total}})</span>\n                </h2>\n            </div>\n            <section class=\"productView-reviews-wrapper toggle b-none m-0 o-h\" id=\"product-reviews\" data-product-reviews>\n                <h4 class=\"toggle-title m-0 d-flex a-i-end j-c-between\">\n                    <div class=\"button-createReview\">\n                        <a class=\"button button--tertiary\" href=\"#\" data-reveal-id=\"modal-review-form\">{{lang 'products.reviews.write_a_review'}}</a>\n                    </div>\n                    {{#if theme_settings.show_product_reviews}}\n                        <a class=\"toggleLink is-open\" data-collapsible href=\"#productReviews-content\">\n                            <span class=\"toggleLink-text toggleLink-text--on\">\n                                {{lang 'products.reviews.hide'}}\n                            </span>\n                            <span class=\"toggleLink-text toggleLink-text--off\">\n                                {{lang 'products.reviews.show'}}\n                            </span>\n                        </a>\n                    {{/if}}\n                </h4>\n                <div class=\"toggle-content is-open\" id=\"productReviews-content\">\n                    <div class=\"productReviews-list pos-relative\" id=\"productReviews-list\">\n                        <div class=\"haloSwiper\" \n                            data-auto-height=\"false\" \n                            data-per-view-mob=\"1.3\" \n                            data-per-view-tab=\"1.8\" \n                            data-per-view-des=\"2.4613\" \n                            data-swiper-pag-des=\"true\" \n                            data-swiper-pag-tab=\"true\" \n                            data-swiper-pag-mob=\"true\" \n                            data-swiper-space-des=\"50\"\n                        >\n                            <div class=\"swiper-wrapper disable-srollbar\">\n                                {{#each reviews.list}}\n                                    <div class=\"productReview reviewBlock__item swiper-slide\">\n                                        <article class=\"content\">\n                                            <header>\n                                                <div class=\"star m-b-16 m-b-12-tb c-inline\">\n                                                    <span class=\"productReview-rating rating--small\">\n                                                        {{> components/products/ratings rating=rating}}\n                                                        <span class=\"productReview-ratingNumber\">{{ rating }}</span>\n                                                    </span>\n                                                </div>\n                                                <h5 class=\"productReview-title f-size-large f-root-tb f-size-small-mb title o-h\"><span class=\"d-inline-block halo-fadeInUp\">{{{ sanitize title }}}</span></h5>\n                                                {{#if name}}\n                                                    <p class=\"productReview-author name m-0 o-h\"><span class=\"d-inline-block halo-fadeInUp\">{{lang 'products.reviews.post_on_by' date=date name=name }}</span></p>\n                                                {{else}}\n                                                    <p class=\"productReview-author name m-0 o-h\"><span class=\"d-inline-block halo-fadeInUp\">{{lang 'products.reviews.post_on_by' date=date name=(lang 'products.reviews.anonymous_poster')}}</span></p>\n                                                {{/if}}\n                                                <p class=\"productReview-body desc o-h\"><span class=\"d-inline-block halo-fadeInUp\">{{{ sanitize text }}}</span></p>\n                                            </header>\n                                        </article>\n                                    </div>\n                                {{/each}}\n                            </div>\n                            <div class=\"swiper-pagination\"></div>\n                        </div>\n                    </div>\n                </div>\n            </section>\n        </div>\n    </div>\n{{else}}\n    <div class=\"halo-block arrow-custom-right-top reviewBlock productReviews c-b\" data-halo-load=\"animation\">\n        <div class=\"container container-1600\">\n            <div class=\"halo-block-header o-h\">\n                <h2 class=\"title d-inline-block halo-fadeInUp m-0\">\n                    <span class=\"text\">{{lang 'products.reviews.heading'}}</span>\n                </h2>\n            </div>\n            <section class=\"productView-reviews-wrapper toggle b-none m-0 o-h\" id=\"product-reviews\" data-product-reviews>\n                <h4 class=\"toggle-title m-0 d-flex a-i-end j-c-between\">\n                    <div class=\"button-createReview\">\n                        <a class=\"button button--tertiary\" href=\"#\" data-reveal-id=\"modal-review-form\">{{lang 'products.reviews.write_a_review'}}</a>\n                    </div>\n                </h4>\n                <div class=\"alertBox alertBox--warning\">\n                    <div class=\"alertBox-column alertBox-icon\">\n                        <svg class=\"icon\"><use xlink:href=\"#icon-info\"></use></svg>\n                    </div>\n                    <p class=\"alertBox-column alertBox-message\">\n                        {{lang 'products.reviews.write_a_review_text'}}\n                    </p>\n                </div>\n            </section>\n        </div>\n    </div>\n{{/if}}\n"}
