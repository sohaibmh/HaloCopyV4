{"components/halothemes/global/halo-recently-viewed":"{{#if theme_settings.halo_recently_viewed_products }}\n    <div id=\"halo-recently-viewed-popup\" class=\"modal modal--large halo-recently-viewed-popup arrow-custom-center-center\" data-limit=\"4\" data-reveal>\n        <div class=\"modal-header\">\n            <h2 class=\"modal-header-title\">Recent Viewed Products</h2>\n            <button class=\"modal-close\" type=\"button\" title=\"Close\">\n                <span class=\"aria-description--hidden\">Close</span>\n                <span aria-hidden=\"true\">Ã—</span>\n            </button>\n        </div>\n        <div class=\"modal-body\">\n            <div class=\"recently-viewed-popup-container pos-relative\">\n                <div class=\"halo-block-content center d-none\">\n                    <div class=\"d-flex f-column j-c-center a-i-center\">\n                        <svg class=\"icon d-block m-b\" role=\"img\" aria-label=\"{{lang 'common.no_item'}}\">\n                            <title>{{lang 'common.no_item'}}</title>\n                            <desc>{{lang 'common.no_item'}}</desc>\n                            <use xlink:href=\"#icon-no-products\"></use>\n                        </svg>\n                        <span class=\"text d-block\">{{lang 'common.no_item'}}</span>\n                    </div>\n                </div>\n                <section class=\"productCarousel haloSwiper pos-relative o-h\"\n                    data-list-name=\"Recent Viewed Products\"\n                    data-free-mode=\"true\"\n                    data-per-view-mob=\"{{theme_settings.cardProd_colMob}}\" \n                    data-per-view-tab=\"{{theme_settings.cardProd_colTab}}\" \n                    data-per-view-des=\"{{theme_settings.cardProd_col}}\"\n                >\n                    <div class=\"swiper-wrapper disable-srollbar\">\n                    </div>\n                </section>\n            </div>\n        </div>\n    </div>\n{{/if}}\n"}
