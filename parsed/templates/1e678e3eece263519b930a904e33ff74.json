{"components/common/subscription-form":"<form class=\"form form-newsletter m-0 halo-fadeInUp\" action=\"{{urls.subscribe.action}}\" method=\"post\" data-halo-animate=\"2\">\n    <fieldset class=\"form-fieldset\">\n        <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n        <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n        <input type=\"hidden\" name=\"check\" value=\"1\">\n        <div class=\"form-field m-0\">\n            <label class=\"form-label is-srOnly\" for=\"nl_email\">{{lang 'common.email_address'}}</label>\n            <div class=\"wrap pos-relative\">\n                <input class=\"form-input input-newsletter b-r-40\"\n                       id=\"nl_email\"\n                       name=\"nl_email\"\n                       type=\"email\"\n                       value=\"{{customer.email}}\"\n                       placeholder=\"{{lang 'newsletter.email_placeholder'}}\"\n                       aria-describedby=\"alertBox-message-text\"\n                       aria-required=\"true\"\n                       autocomplete=\"email\"\n                       required\n                >\n                <input class=\"button button--secondary button-newsletter f-bold b-none b-r-40 pos-absolute\"\n                       type=\"submit\"\n                       value=\"{{lang 'newsletter.subscribe_submit'}}\"\n                >\n            </div>\n            {{#if settings.show_newsletter_summary }}\n                <div class=\"footer-newsletter-summary p-t\">{{settings.newsletter_summary}}</div>\n            {{/if}}\n        </div>\n    </fieldset>\n</form>\n","components/halothemes/footer/halo-subscribe":"{{#if theme_settings.subscribe}}\n    <div class=\"halo-block subscribe\" data-halo-load=\"animation\">\n        <div class=\"container container-1600\">\n            <div class=\"content d-block-mb d-flex a-i-center j-c-between b-r-20 p-60 p-40-20-tb p-30-10-mb bg-global\">\n                <div class=\"content-left\">\n                    <h3 class=\"m-t-0 m-b-16 m-b-12-tb m-b-8-mb o-h\"><span class=\"title color-custom-white d-inline-block halo-fadeInUp\">{{theme_settings.subscribe_title}}</span></h3>\n                    <p class=\"desc-small color-custom-white l-h-b l-h-larger-tb l-h-large-mb m-0 o-h\"><span class=\"d-inline-block halo-fadeInUp\">{{{theme_settings.subscribe_desc}}}</span></p>\n                </div>\n                <div class=\"content-right m-t-20-mb o-h\">\n                    {{#if settings.show_newsletter_box}}\n                        {{> components/common/subscription-form}}\n                    {{/if}}\n                </div>\n            </div>\n        </div>         \n    </div>\n{{/if}}\n"}
