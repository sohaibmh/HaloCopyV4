{"components/halothemes/home/home-recent-posts":"{{#if theme_settings.halo_recent_post}}\n    <div class=\"halo-block halo-block-post\" data-halo-load=\"animation\">\n        <div class=\"container container-1600\">\n            <div class=\"halo-block-header center o-h\">\n                <h2 class=\"title d-inline-block halo-fadeInUp\">{{{theme_settings.halo_recent_post_title}}}</h2>\n            </div>\n            <div class=\"haloSwiper o-h\" data-swiper-pag-des=\"true\" data-swiper-pag-tab=\"true\" data-swiper-pag-mob=\"true\" data-swiper-space-des=\"0\" data-swiper-space-tab=\"0\" data-swiper-space-mob=\"0\">\n                <div class=\"halo-recent-post swiper-wrapper disable-srollbar\">\n                    {{#each post}}\n                        <div class=\"item swiper-slide hover-zoom pos-relative\" data-index=\"{{add @index 1}}\">\n                            {{#if thumbnail}}\n                                <div class=\"item-image o-h\">\n                                    <a class=\"halo-fadeZoom image-with-overlay b-r-32\" href=\"{{url}}\">\n                                        <img class=\"w-100\" src=\"{{getImage thumbnail 'theme_settings.recent_blog_size'}}\" alt=\"{{title}}\">\n                                    </a>\n                                </div>\n                            {{else}}\n                                <div class=\"item-image o-h\">\n                                    <a class=\"halo-fadeZoom image-with-overlay b-r-32\" href=\"{{url}}\">\n                                        <img class=\"w-100\" src=\"{{cdn 'img/placeholder-electronic.svg'}}\" alt=\"{{title}}\">\n                                    </a>\n                                </div>\n                            {{/if}}\n                            <div class=\"content-wrapper halo-fadeInUp\">\n                                <p class=\"date color-custom-white m-b-16 m-b-12-tb m-b-8-mb\">{{#if author}}{{lang 'blog.posted_by' name=author}} on {{/if}}{{date_published}}</p>\n                                <h4 class=\"m-t-0 m-b-16 m-b-12-tb m-b-8-mb\">\n                                    <a class=\"link-line color-custom-white f-h2\" href=\"{{url}}\" aria-label=\"{{title}}\"><span>{{title}}</span></a>\n                                </h4>\n                                {{#if summary}}\n                                    <div class=\"summary f-root f-size-small-tb f-size-tiny-mb w-s-normal color-custom-white m-b m-b-18-tb m-b-16-mb l-h-extra l-h-larger-tb l-h-large-mb\">{{{summary}}} &hellip;</div>\n                                {{/if}}\n                                <a class=\"button button--tertiary m-0\" href=\"{{url}}\">{{lang 'common.read_more'}}</a>\n                            </div>\n                        </div>\n                    {{/each}}\n                </div>\n                <div class=\"swiper-pagination\"></div>\n            </div>\n        </div>\n    </div>\n    {{{region name=\"home_below_recent_posts\"}}}\n{{/if}}\n"}
