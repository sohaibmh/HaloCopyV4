{"components/common/wishlist":"{{#if settings.show_wishlist}}\n    <div class=\"card-wishlist\" data-wishlist-add>\n        <button class=\"js-wishlist button button--secondary\" data-id=\"{{id}}\" aria-label=\"Wishlist\">\n            {{lang 'account.wishlists.add_item'}}\n            <svg class=\"icon\" role=\"img\" aria-label=\"{{lang 'account.wishlists.add_item'}}\">\n                <title>{{lang 'account.wishlists.add_item'}}</title>\n                <desc>{{lang 'account.wishlists.add_item'}}</desc>\n                <use xlink:href=\"#icon-arrow-down\"></use>\n            </svg>\n        </button>\n        <ul class=\"wishlist-menu card has-loading haloCustomScrollbar animated--out\" data-halo-animate=\"1\">\n            <li class=\"wishlist-item wishlist-add\">\n                <a class=\"wishlist\" href=\"/wishlist.php?action=add&product_id={{id}}\">\n                    <span>{{lang 'account.wishlists.add_to_default'}}</span>\n                </a>\n            </li>\n            <li class=\"wishlist-item wishlist-create\">\n                <a href=\"/wishlist.php?action=addwishlist&product_id={{id}}\">\n                    <span>{{lang 'account.wishlists.create_new'}}</span>\n                </a>\n            </li>\n            <li class=\"wishlist-item wishlist-view\">\n                <a href=\"/wishlist.php\">\n                    <span>{{lang 'account.wishlists.view'}}</span>\n                </a>\n            </li>\n        </ul>\n    </div>\n{{/if}}\n"}
