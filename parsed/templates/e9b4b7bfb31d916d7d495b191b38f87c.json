{"components/faceted-search/selected-facets":"<div class=\"facetedSearch-refineFilters sidebarBlock bg-white b-r-16\">\n    <div class=\"accordion-nav-clear-holder\">\n        <button type=\"button\"\n            class=\"accordion-navigation toggleLink is-open\"\n            data-collapsible=\"#facetedSearch-content--refineBy\"\n            aria-label=\"{{lang 'search.faceted.selected.title'}}\"\n        >\n            <span class=\"sidebarBlock-heading m-0 f-size-large f-semibold\">\n                <span class=\"d-inline-block v-a-middle\">{{lang 'search.faceted.selected.title'}}</span>\n                <span class=\"number bg-global-color b-circle d-inline-block v-a-middle center f-root f-semibold\">{{#if items}}{{#each items}}{{#if @last}}{{add @index 1}}{{/if}}{{/each}}{{else}}0{{/if}}</span>\n            </span>\n            <span>\n                <svg class=\"icon accordion-indicator toggleLink-text toggleLink-text--off\">\n                    <use href=\"#icon-arrow-down\" />\n                </svg>\n                <svg class=\"icon accordion-indicator toggleLink-text toggleLink-text--on\">\n                    <use href=\"#icon-arrow-up\" />\n                </svg>\n            </span>\n        </button>\n    </div>\n    <div id=\"facetedSearch-content--refineBy\" class=\"accordion-content facetedSearch-content--refineBy is-open\">\n        {{#if items}}\n            <ul class=\"inlineList inlineList--labels\">\n                {{#each items}}\n                    <li class=\"d-inline-block f-size-small\">\n                        <a href=\"{{url}}\"\n                        class=\"facetLabel b-r-100 pos-relative bg-primary color-custom-white\"\n                        rel=\"nofollow\"\n                        data-faceted-search-facet\n                        >\n                            {{#if facet '===' 'rating'}}\n                                {{lang 'search.faceted.selected.rating-label' rating=title}}\n                            {{else}}\n                                {{{sanitize title}}}\n                            {{/if}}\n\n                            <svg class=\"icon pos-absolute\">\n                                <use href=\"#icon-close\" />\n                            </svg>\n                        </a>\n                    </li>\n                {{/each}}\n            </ul>\n        {{else}}\n            <p class=\"sidebarBlock-content\">{{lang 'search.faceted.selected.no-filters'}}</p>\n        {{/if}}\n\n        {{#if remove_all_url}}\n            <a class=\"remove-all d-block color-heading u-u u-p-u\" href=\"{{remove_all_url}}\" data-faceted-search-facet>\n                {{lang 'search.faceted.selected.clear-all'}}\n            </a>\n        {{/if}}\n    </div>\n</div>\n"}
