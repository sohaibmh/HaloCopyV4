{"components/halothemes/product/halo-product-size-chart":"{{#if theme_settings.halo_sizechart_type '==' 'all'}}\n    {{#if theme_settings.halo_sizechart_image}}\n        <div class=\"productView-sizeChart d-inline-block v-a-top{{#if product.options}} productView-sizeChartOption{{/if}}\">\n            <a class=\"productView-item-link productView-sizeChart-link color-black b-r-100\" href=\"#\" data-reveal-id=\"modal-size-chart-form\">\n                <svg class=\"icon d-inline-block v-a-middle\" role=\"img\" aria-hidden=\"true\" aria-label=\"{{lang 'products.size_chart'}}\">\n                    <title>{{lang 'products.size_chart'}}</title>\n                    <desc>{{lang 'products.size_chart'}}</desc>\n                    <use xlink:href=\"#icon-size-chart\"></use>\n                </svg>\n                <span class=\"text d-inline-block v-a-middle\">{{lang 'products.size_chart'}}</span>\n            </a>\n            <div id=\"modal-size-chart-form\" class=\"modal productView-sizeChartform\" data-reveal>\n                <div class=\"modal-header\">\n                    <h2 class=\"modal-header-title\">{{lang 'products.size_chart'}}</h2>\n                    <button class=\"modal-close\" type=\"button\" title=\"Close\">\n                        <span class=\"aria-description--hidden\">Close</span>\n                        <span aria-hidden=\"true\">×</span>\n                    </button>\n                </div>\n                <div class=\"modal-body\">\n                    <div class=\"productView-sizeChartimg\">\n                        <img src=\"https://cdn11.bigcommerce.com/s-{{settings.store_hash}}/product_images/uploaded_images/{{theme_settings.halo_sizechart_image}}\" alt=\"{{lang 'products.size_chart'}}\" title=\"{{lang 'products.size_chart'}}\">\n                    </div>\n                </div>\n            </div>\n        </div>\n    {{/if}}\n{{else if theme_settings.halo_sizechart_type '==' 'custom'}}\n    {{#each product.custom_fields}}\n        {{#if name '===' '__sizechart'}}\n            <div class=\"productView-sizeChart{{#if ../product.options}} productView-sizeChartOption{{/if}}\">\n                <a class=\"productView-item-link productView-sizeChart-link color-black f-medium\" href=\"#\" data-reveal-id=\"modal-size-chart-form\">\n                    <svg class=\"icon\" role=\"img\" aria-hidden=\"true\" aria-label=\"{{lang 'products.size_chart'}}\">\n                        <title>{{lang 'products.size_chart'}}</title>\n                        <desc>{{lang 'products.size_chart'}}</desc>\n                        <use xlink:href=\"#icon-size-chart\"></use>\n                    </svg>\n                    <span class=\"text\">{{lang 'products.size_chart'}}</span>\n                </a>\n                <div id=\"modal-size-chart-form\" class=\"modal productView-sizeChartform\" data-reveal>\n                    <div class=\"modal-header\">\n                        <h2 class=\"modal-header-title\">{{lang 'products.size_chart'}}</h2>\n                        <button class=\"modal-close\" type=\"button\" title=\"Close\">\n                            <span class=\"aria-description--hidden\">Close</span>\n                            <span aria-hidden=\"true\">×</span>\n                        </button>\n                    </div>\n                    <div class=\"modal-body haloCustomScrollbar\">\n                        <div class=\"productView-sizeChartimg\">\n                            <img src=\"https://cdn11.bigcommerce.com/s-{{../settings.store_hash}}/product_images/uploaded_images/{{value}}\" alt=\"{{lang 'products.size_chart'}}\" title=\"{{lang 'products.size_chart'}}\">\n                        </div>\n                    </div>\n                </div>\n            </div>\n        {{/if}}\n    {{/each}}\n{{/if}}\n"}
