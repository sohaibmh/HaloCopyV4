{"components/halothemes/global/halo-newsletter-popup":"{{#if theme_settings.halo_newsletter_popup}}\n    <div id=\"halo-newsletter-popup\" class=\"halo-popup halo-newsletter-popup{{#unless theme_settings.halo_newsletter_popup_image}} halo-newsletter-popup-noImage{{/unless}} hide\">\n        <div class=\"newsletter-popup-container\">\n            <div class=\"newsletter-popup-inner b-r-20 haloCustomScrollbar\">\n                <button type=\"button\" data-close-newsletter-popup>\n                    <svg class=\"icon\" role=\"img\" aria-label=\"{{lang 'common.close'}}\">\n                        <title>{{lang 'common.close'}}</title>\n                        <desc>{{lang 'common.close'}}</desc>\n                        <use href=\"#icon-close\"></use>\n                    </svg>\n                </button>\n                {{#if theme_settings.halo_newsletter_popup_image}}\n                    <div class=\"newsletter-top pos-relative o-h w-100 d-inline-block d-none-mb\">\n                        <div class=\"image-wrapper halo-fadeZoom\">\n                            <img class=\"b-r-0\" src=\"https://cdn11.bigcommerce.com/s-{{settings.store_hash}}/product_images/uploaded_images/{{theme_settings.halo_newsletter_popup_image}}\" alt=\"{{{lang 'newsletter.subscribe'}}}\" title=\"{{{lang 'newsletter.subscribe'}}}\">\n                        </div>\n                    </div>\n                {{/if}}\n                <div class=\"newsletter-bottom center\">\n                    <div class=\"content\">\n                        <h4 class=\"newsletter-heading halo-fadeIn m-t-0 m-b-10\" data-halo-animate=\"2\">{{{lang 'newsletter.subscribe_popup'}}}</h4>\n                        <div class=\"newsletter-message halo-fadeIn m-b\" data-halo-animate=\"3\">\n                            <span class=\"color-secondary f-root\">{{lang 'newsletter.subscribe_intro'}}</span>\n                        </div>\n                        <div class=\"halo-fadeIn\" id=\"popupSubscribeForm\" data-halo-animate=\"4\">\n                            <form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\" id=\"popupSubscribeFormSubmit\">\n                                <fieldset class=\"form-fieldset\">\n                                    <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n                                    <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n                                    <input type=\"hidden\" name=\"check\" value=\"1\">\n                                    <div class=\"form-field\">\n                                        <label class=\"form-label is-srOnly\" for=\"nl_email2\">{{lang 'newsletter.email_placeholder'}}</label>\n                                        <input class=\"form-input center m-b-20\" id=\"nl_email2\" name=\"nl_email\" type=\"email\" placeholder=\"{{lang 'newsletter.email_placeholder'}}\">\n                                        <input class=\"button button--primary f-size-large f-root-tb f-size-small-mb m-b-20\" type=\"submit\" value=\"{{lang 'newsletter.subscribe_submit'}}\">\n                                    </div>\n                                </fieldset>\n                            </form>\n                        </div>\n                        {{#if theme_settings.halo_newsletter_popup_again}}\n                            <div class=\"form-show-again halo-fadeIn\" data-halo-animate=\"5\">\n                                <form class=\"form m-0\">\n                                    <div class=\"form-field form-field-checkbox\">\n                                        <input id=\"do-not-show-again\" class=\"do-not-show-again\" type=\"checkbox\" name=\"don't show again\" value=\"1\"> \n                                        <label class=\"form-label c-pointer m-0\" for=\"do-not-show-again\">\n                                            <span class=\"u-u u-p-u\">{{lang 'newsletter.subscribe_dontshow'}}</span>\n                                        </label>\n                                    </div>\n                                </form>\n                            </div>\n                        {{/if}}\n                    </div>\n                </div>\n            </div>\n        </div>\n    </div>\n{{/if}}\n"}
